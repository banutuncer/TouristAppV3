<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TouristAppV3.view"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:TouristAppV3.viewmodel"
    x:Class="TouristAppV3.view.VikingView"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Vikings/resim3.png"/>
        </Grid.Background>
        <Grid.DataContext>
            <viewmodel:VikingViewModel/>
        </Grid.DataContext>
        <ListView HorizontalAlignment="Left" Height="253" Margin="38,323,0,0" VerticalAlignment="Top" Width="201" ItemsSource="{Binding Vikings, Mode=TwoWay}" SelectedItem="{Binding SelectedViking, Mode=TwoWay}" FontSize="24" FontWeight="Bold" FontFamily="Arial Black" BorderBrush="#FFAE2424" Foreground="#FFE8CB12"/>
        <TextBlock HorizontalAlignment="Left" Margin="691,104,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Height="33" Width="102" FontSize="36" FontWeight="Bold" SelectionHighlightColor="#FFB42C17" Foreground="#FF44702E"/>
        <Image HorizontalAlignment="Left" Height="220" Margin="275,106,0,0" VerticalAlignment="Top" Width="360" Source="{Binding SelectedViking.ImageUrl, Mode=TwoWay}"/>
        <TextBlock HorizontalAlignment="Left" Margin="901,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" Width="188" Text="{Binding SelectedViking.Name, Mode=TwoWay}" FontWeight="Bold" FontSize="36" FontFamily="Arial Black" Foreground="#FF5D9742" SelectionHighlightColor="#FF4414B4" RenderTransformOrigin="0.058,0.484"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Size" VerticalAlignment="Top" Foreground="#FF67BD3B"/>
        <TextBlock HorizontalAlignment="Left" Margin="691,185,0,0" TextWrapping="Wrap" Text="Speed" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="36" Width="117" Foreground="#FF467032" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="901,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="43" Width="102" Text="{Binding SelectedViking.speed, Mode=TwoWay}" FontFamily="Arial Black" FontSize="36" FontWeight="Bold" Foreground="#FF467032"/>
        <TextBlock HorizontalAlignment="Left" Margin="691,268,0,0" TextWrapping="Wrap" Text="Material" VerticalAlignment="Top" Foreground="#FF467032" FontFamily="Arial Black" FontWeight="Bold" FontSize="36" RenderTransformOrigin="0.113,0.093"/>
        <TextBlock HorizontalAlignment="Left" Margin="901,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="400" RenderTransformOrigin="0.725,-0.058" FontFamily="Arial Black" FontWeight="Bold" FontSize="36" Text="{Binding SelectedViking.material, Mode=TwoWay}" Foreground="#FF467032"/>
        <TextBlock HorizontalAlignment="Left" Margin="691,326,0,0" TextWrapping="Wrap" Text="Length" VerticalAlignment="Top" Height="57" Width="141" Foreground="#FF467032" FontWeight="Bold" FontFamily="Arial Black" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Margin="901,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="128" Foreground="#FF467032" FontFamily="Arial Black" FontWeight="Bold" FontSize="36" Text="{Binding SelectedViking.lenght}"/>
        <Button x:ConnectionId='1' Content="Additional Information" HorizontalAlignment="Left" Margin="35,618,0,0" VerticalAlignment="Top"                      FontFamily="Arial Black" FontWeight="Bold" FontSize="18">
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>

