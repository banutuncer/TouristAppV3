<Page
    x:Class="TouristAppV3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TouristAppV3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' x:Name="Viking" Label="VikingMuseum"                     >
                <AppBarButton.Icon>
                    <FontIcon Glyph="V"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:ConnectionId='2' x:Name="Exercise" Label="Excercise"                       >
                <AppBarButton.Icon>
                    <FontIcon Glyph="E"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:ConnectionId='3' x:Name="Home" Icon="Home" Label="Home"                   />
            <AppBarSeparator/>
            <AppBarButton Icon="Comment" Label="Help The Developers"/>

        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Roskilde_University_10.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="210,60,0,0" TextWrapping="Wrap" Text="TravelGuide" VerticalAlignment="Top" Height="98" Width="511" FontSize="72"/>
        <Button x:ConnectionId='4' x:Name="ExerciseButton" Content="Exercise" HorizontalAlignment="Left" Margin="117,300,0,0" VerticalAlignment="Top" FontSize="20"                                              Height="130" Width="247"/>
        <Button x:ConnectionId='5' x:Name="MuseumButton" Content="Museum" HorizontalAlignment="Left" Margin="117,177,0,0" VerticalAlignment="Top" FontSize="18"                                          Height="124" Width="247"/>
        <Image x:Name="Image1" HorizontalAlignment="Left" Height="160" Margin="169,516,0,0" VerticalAlignment="Top" Width="175" Grid.RowSpan="2"/>
        <Button x:ConnectionId='6' x:Name="Button1" Content="1*" HorizontalAlignment="Left" Margin="117,513,0,0" VerticalAlignment="Top"                       Width="55"/>
        <Button x:ConnectionId='7' x:Name="Button2" Content="2*" HorizontalAlignment="Left" Margin="117,545,0,-1" VerticalAlignment="Top"                       Width="55"/>
        <Button x:ConnectionId='8' x:Name="Button3" Content="3*" HorizontalAlignment="Left" Margin="117,577,0,0" VerticalAlignment="Top"                       Width="55" Grid.RowSpan="2"/>
        <Button x:ConnectionId='9' x:Name="Button4" Content="4*" HorizontalAlignment="Left" Margin="117,27,0,0" VerticalAlignment="Top"                       Width="55" Grid.Row="1"/>
        <Button x:ConnectionId='10' x:Name="Button5" Content="5*" HorizontalAlignment="Left" Margin="117,59,0,0" VerticalAlignment="Top"                       Width="55" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="120,455,0,0" TextWrapping="Wrap" Text="Please Help Us, to help you!" VerticalAlignment="Top" Height="16" Width="142"/>
        <TextBlock HorizontalAlignment="Left" Margin="120,471,0,0" TextWrapping="Wrap" Text="Rate our app" VerticalAlignment="Top" Height="16" Width="142"/>

    </Grid>
</Page>

